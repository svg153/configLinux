# THNAKS:
#   * https://github.com/US-CBP/GTAS/blob/master/.gitconfig
[user]
	name = Sergio Valverde
[core]
	askpass =
	editor = vim
	# gitproxy = gitproxy
[push]
	default = upstream
[alias]
	p = push
	pf = push --force
	l = pull
	lp = pull --prune
	lr = pull --rebase
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	sw = switch
	st = status
	ci = commit
	cim = ci -m 
	cipc = cim 'Fix pre-commit'
	cii = "!f() { msg=\"$(git branch --show | awk -F'_' '{print $2}' | tr '-' ' ')\" && git commit -m \"${msg}\"; }; f"
	ciwi = "!f() { msg=\"$(git branch --show | tr '_' ' ' | sed 's/AB-/AB#/g' | tr '-' ' ')\" && git commit -m \"${msg}\"; }; f"
	amend = ci --amend --no-edit
	amend-force = !git amend && git pf
	co = checkout
	discart = checkout --
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	reset-branch = !git reset $(git merge-base main $(git branch --show-current))
	branch-name = !git rev-parse --abbrev-ref HEAD
	last = log -1 HEAD
	diffw = diff --ignore-blank-lines --ignore-all-space
	difft = difftool #TODO: install difftool
	author = config --get user.email
	x = update-index --chmod=+x
	fame = !docker run --rm -v $(pwd):/repo casperdcl/git-fame
	# typos
	pul = pull
	pyll = pull
	pyul = pull
	upll = pull
	pus = push
	puhs = push
	psuh = push
[include]
	path = .gitconfig-default
[includeIf "gitdir:~/REPOSITORIOS/0_WORK/0_PEZA/"]
	path = .gitconfig-peza
[includeIf "gitdir:~/REPOSITORIOS/0_WORK/0_PEZA_ACTIONS/"]
	path = .gitconfig-peza
[includeIf "gitdir:~/REPOSITORIOS/0_WORK/NomuPay/"]
	path = .gitconfig-nomupay
[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[init]
	defaultBranch = main
