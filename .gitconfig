[user]
	name = Sergio Valverde
[core]
	askpass =
	editor = vim
	# gitproxy = gitproxy
[push]
	default = upstream
[alias]
	p = push
	pf = push --force
	l = pull
	lp = pull --prune
	lr = pull --rebase
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	sw = switch
	st = status
	ci = commit
	cim = ci -m 
	cipc = cim 'Fix pre-commit'
	cii = !git commit -m \"$(git branch --show  | tr '-' ' ')\"
	amend = ci --amend --no-edit
	amend-force = !git amend && git pf
	co = checkout
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	reset-branch = !git reset $(git merge-base main $(git branch --show-current))
	branch-name = !git rev-parse --abbrev-ref HEAD
	last = log -1 HEAD
	diffw = diff --ignore-blank-lines --ignore-all-space
	difft = difftool #TODO: install difftool
	author = config --get user.email
	reset-branch = !git reset $(git merge-base main $(git branch --show-current))
	fame = !docker run --rm -v $(pwd):/repo casperdcl/git-fame
	# typos
	pul = pull
	pyll = pull
	pyul = pull
	upll = pull
	pus = push
	puhs = push
	psuh = push
[init]
	defaultBranch = main
